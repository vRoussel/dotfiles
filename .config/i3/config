bindsym $mod+r exec $HOME/.i3/i3_rename_workspace.sh

bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+grave exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '
bindsym $mod+u exec i3-input -F 'unmark %s' -l 1 -P 'Unmark: '

bindsym $mod+minus [title="^scratch"] scratchpad show
exec --no-startup-id i3-sensible-terminal -T scratch
for_window [title="^scratch"] move scratchpad

bindsym $mod+equal [title="^(?!^scratch$|.*Zeal|^todolist).*$"] scratchpad show
bindsym $mod+Shift+equal move scratchpad

bindsym $mod+g exec $HOME/.i3/vim_scratch.sh primary
bindsym $mod+Shift+g exec $HOME/.i3/vim_scratch.sh clipboard
for_window [title="^__vim_scratch"] floating enable

bindsym $mod+z [title="^.*Zeal$"] scratchpad show
exec --no-startup-id zeal
for_window [title="^.*Zeal$"] move scratchpad

bindsym $mod+t [title="^todolist$"] scratchpad show
exec --no-startup-id i3-sensible-terminal -T todolist -x bash -c 'todo.sh ls; exec bash'
