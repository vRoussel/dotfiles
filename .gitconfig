[url "https://aur.archlinux.org/"]
    insteadOf = aur:

[url "https://github.com/"]
    insteadOf = gh:

[user]
	name = Valentin Roussel
	email = valentin.rssl@gmail.com

[core]
	editor = nvim
    pager = delta --diff-so-fancy

[alias]
	co = checkout
    st = status

#delta
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
